<div class = 'view-form-partial'>
    <%= form_for @customer_payment, html: {class: 'ui form'} do |customer_payment| %>
        <div class = 'ui attached bottom segment'>
            <div class = 'field'>
                <label>Customer Account</label>
                <%= render '/shared/customer_account_selector' %>
            </div>
            <div class = 'field'>
                <label>Purchase Order</label>
                <div class = 'ui segments'>
                    <div class = 'ui attached segment'>
                        <div class = 'ui two column grid'>
                            <div class = 'row'>
                                <div class = 'six wide column'>
                                    <div class = 'ui input'>
                                        <input type = 'text' placeholder = 'Search...'>
                                    </div>
                                </div>
                                <div class = 'ten wide column'>
                                    <span id = 'label-poCount'></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class = 'ui attached segment po-table-container'>
                        <table id = 'table-poTable' class = 'ui celled striped table'>
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>ID</th>
                                    <th>Purchase Date</th>
                                    <th>Total</th>
                                    <th>Outstanding Bal.</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class = 'fields'>
                <div class = 'eight wide field'>
                    <div class = 'field'>
                        <%= label_tag :payment_date, 'Payment Date' %>
                        <%= customer_payment.date_field :payment_date  %>
                    </div>
                </div>
                <div class = 'eight wide field'>
                    <div class = 'field'>
                        <%= label_tag :amount_paid %>
                        <%= customer_payment.text_field :amount_paid %>
                    </div>
                </div>
            </div>
        </div>
        <div class = 'ui bottom attached segment'>
            <%= customer_payment.submit 'Save', class: 'ui primary button' %>
        </div>

        <!-- Hidden Fields -->
        <%= customer_payment.text_field :customer_account_id %>
        <%= customer_payment.text_field :purchase_order_id %>
    <% end %>
</div>