                    <span><%= @customer_payment.purchase_order.po_num %></span>
                </div>
                <div class = 'field'>
                    <label>Payment Date</label>
                    <span><%= @customer_payment.payment_date %></span>
                </div>
                <div class = 'field'>
                    <label>Amount Paid</label>
